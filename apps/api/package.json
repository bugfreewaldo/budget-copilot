{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "description": "Fastify API service for Budget Copilot",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "node scripts/copy-wasm.cjs",
    "dev": "node --import tsx src/server/index.ts",
    "build": "tsc && node scripts/copy-wasm.cjs",
    "start": "node dist/server/index.js",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@budget-copilot/ai": "workspace:*",
    "@budget-copilot/core": "workspace:*",
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/env": "^4.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/multipart": "^8.1.0",
    "@libsql/client": "^0.15.15",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.2",
    "fastify": "^4.25.2",
    "fastify-plugin": "^4.5.1",
    "nanoid": "^5.0.4",
    "sql.js": "^1.10.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@budget-copilot/config": "workspace:*",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.10.6",
    "@types/sql.js": "^1.4.9",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.9",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
