# Server Configuration
PORT=4000
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration
# For production (Turso - recommended)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here

# For local dev fallback (SQL.js file-based SQLite - Windows friendly!)
DATABASE_URL=./data/budget.db

# For tests (in-memory)
# DATABASE_URL=:memory:

# AI Provider Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# S3/R2 Storage Configuration (for file uploads)
# Required for the file upload feature
S3_BUCKET=your-bucket-name
S3_REGION=auto
# For Cloudflare R2: https://<account-id>.r2.cloudflarestorage.com
# For AWS S3: leave empty (uses default AWS endpoints)
S3_ENDPOINT=
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key

# Cron Job Configuration
# Secret token to authenticate cron job requests
# Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here
