{
  "name": "budget-copilot",
  "version": "1.1.0",
  "private": true,
  "description": "AI-powered budget copilot - intelligent financial management",
  "pnpm": {
    "overrides": {
      "@types/react": "^18.2.45",
      "@types/react-dom": "^18.2.18"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "web:dev": "pnpm --filter web dev",
    "api:dev": "pnpm --filter api dev",
    "prepare": "node -e \"if (process.env.CI !== 'true') require('husky').install()\""
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "drizzle-kit": "0.31.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "turbo": "^1.11.3"
  },
  "packageManager": "pnpm@8.15.1",
  "dependencies": {
    "drizzle-orm": "0.45.1"
  }
}
